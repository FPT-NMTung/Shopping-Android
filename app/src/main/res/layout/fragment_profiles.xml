<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F6F9"
    tools:context=".view.fragment.Profiles">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:cardElevation="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F2F6F9">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/LabelProfiles"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- PROFILES -->

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/profiles"
        android:layout_width="354dp"
        android:layout_height="138dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="30dp"
        android:background="@color/white"
        android:backgroundTint="#FFFFFF"
        android:clipToOutline="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        tools:targetApi="s">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardImageProfiles"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageProfiles"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="TODO"
                    android:src="@android:drawable/screen_background_dark"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtNameProfiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="31dp"
                android:background="#FFFFFF"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/LabelUsername"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/cardImageProfiles"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtEmailProfiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins"
                android:text="@string/LabelEmail"
                android:textColor="#353636"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/cardImageProfiles"
                app:layout_constraintTop_toBottomOf="@+id/txtNameProfiles" />

            <Button


                android:id="@+id/btnEditProfiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/editprofile"
                android:fontFamily="@font/poppins_semibold"
                android:forceDarkAllowed="false"
                android:includeFontPadding="true"
                android:text="@string/btnEditlLabel"
                android:textSize="14sp"
                android:visibility="visible"
                app:cornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/btnVerifyProfiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/LabelVerifyNow"
                android:textSize="14sp"
                app:cornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnEditProfiles" />

            <TextView
                android:id="@+id/labelVerifiedProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="39dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins"
                android:text="@string/LabelVeriedUser"
                android:textColor="#000000"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imageVerifiedProfile"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="21dp"
                android:layout_marginBottom="18dp"
                android:contentDescription="@string/DesImage"
                android:src="@drawable/verified"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="23dp"
                android:layout_height="25dp"
                android:contentDescription="TODO"
                android:src="@drawable/editprofile"
                app:layout_constraintBottom_toBottomOf="@+id/btnEditProfiles"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.133"
                app:layout_constraintStart_toStartOf="@+id/btnEditProfiles"
                app:layout_constraintTop_toTopOf="@+id/btnEditProfiles" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
    <!-- 01 -->
    <View
        android:id="@+id/viewMyOrdersProfiles"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:background="#00000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profiles"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/my_orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="top"
        android:lineSpacingExtra="0sp"
        android:text="@string/LabelMyOrders"
        android:textAppearance="@style/my_orders"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewMyOrdersProfiles" />

    <ImageView
        android:id="@+id/ArrowOrders"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="30dp"

        android:contentDescription="@string/DesImage"
        android:src="@drawable/arrowright"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewMyOrdersProfiles" />
    <!-- Line -->
    <View

        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="#C6C5C5"
        android:backgroundTint="#C6C5C5"
        app:layout_constraintBottom_toBottomOf="@+id/viewMyOrdersProfiles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/viewMyFavoritiesProfiles"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="30dp"
        android:background="#00000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewMyOrdersProfiles"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/MyFavourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="top"
        android:lineSpacingExtra="0sp"
        android:text="@string/LabelMyFavourites"
        android:textAppearance="@style/my_orders"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewMyFavoritiesProfiles" />

    <View

        android:id="@+id/line2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="#C6C5C5"
        android:backgroundTint="#C6C5C5"
        app:layout_constraintBottom_toBottomOf="@+id/viewMyFavoritiesProfiles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/arrowMyFavourite"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="30dp"

        android:contentDescription="@string/DesImage"
        android:src="@drawable/arrowright"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewMyFavoritiesProfiles" />

    <View
        android:id="@+id/viewShippingAddressProfiles"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="30dp"
        android:background="#00000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewMyFavoritiesProfiles"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/ShippingAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="top"
        android:lineSpacingExtra="0sp"
        android:text="@string/LabelShippingAddress"
        android:textAppearance="@style/my_orders"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewShippingAddressProfiles" />

    <View

        android:id="@+id/line4"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="#C6C5C5"
        android:backgroundTint="#C6C5C5"
        app:layout_constraintBottom_toBottomOf="@+id/viewShippingAddressProfiles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/arrowShippingAddress"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="30dp"

        android:contentDescription="@string/DesImage"
        android:src="@drawable/arrowright"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewShippingAddressProfiles" />

    <ImageView
        android:id="@+id/arrowSGiftCards"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="30dp"

        android:contentDescription="@string/DesImage"
        android:src="@drawable/arrowright"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewVoucherProfiles" />

    <View
        android:id="@+id/viewVoucherProfiles"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="30dp"
        android:background="#00000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewShippingAddressProfiles"
        tools:ignore="MissingConstraints" />

    <View

        android:id="@+id/line5"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="#C6C5C5"
        android:backgroundTint="#C6C5C5"
        app:layout_constraintBottom_toBottomOf="@+id/viewVoucherProfiles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/shippingAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="top"
        android:lineSpacingExtra="0sp"
        android:text="@string/Labelgiftcardsvouchers"
        android:textAppearance="@style/my_orders"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewVoucherProfiles" />

    <TextView
        android:id="@+id/Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="top"
        android:lineSpacingExtra="0sp"
        android:text="@string/LabelLogout"
        android:textAppearance="@style/my_orders"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewLogoutProfile" />

    <View
        android:id="@+id/viewLogoutProfile"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="30dp"
        android:background="#00000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewVoucherProfiles"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/arrowLogout"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="30dp"

        android:contentDescription="@string/DesImage"
        android:src="@drawable/arrowright"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewLogoutProfile" />

    <View

        android:id="@+id/line6"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="#C6C5C5"
        android:backgroundTint="#C6C5C5"
        app:layout_constraintBottom_toBottomOf="@+id/viewLogoutProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>